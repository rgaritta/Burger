<div class="container">
	<div class="row">
		<div class="col-12 text-center" id="top-bar">
			<img src="/assets/img/burger.png" alt="burger" />
			<h1> Have a delicious Burger! </h1>
		</div>
		<div class="col-6 text-center" class="list">
			<h4>Burgers you should eat:</h4>
			<div class="row">
			  {{#each burger_data}}
			  	{{#unless this.devoured}}
				<div class="col-9 text-center">
					{{this.id}}. {{this.burger_name}}
					
				</div>
				<div class="col-3 text-center">
					<form class="eat-me">
						<input input type="hidden" class="burger_id" type="text" value={{this.id}}><br>
						<button type="submit" class="btn btn-info">EAT ME!</button>
					</form>
				</div>
				{{/unless}}
			  {{/each}}
			</div>
		</div>
		<div class="col-6 text-center" class="task">
			<h4>Burgers you've already eaten:</h4>
			  {{#each burger_data}}
			  	{{#if this.devoured}}
			  		<input class="form-group" type="text" placeholder="{{this.id}} . {{this.burger_name}}" readonly>
				{{/if}}
			  {{/each}}
		</div>
	</div>
</div>

<div class="container">
	<div class="row">
		<div class="col-6 text-center">
			<form action="/burgers/create" method="POST">
				<input type="text" class="form-control" name="burger_name" value="" id="enter_text">
				<button type="submit" class="btn btn-info" id="text-enter-button">Submit</button>
			</form>
			<p>Type the name of your next burger and add it to the list!</p>
		</div>
	</div>
</div>
